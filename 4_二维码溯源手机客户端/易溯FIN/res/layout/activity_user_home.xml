<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qiushou"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >

    <Button
        android:id="@+id/gen"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/scan"
        android:layout_toRightOf="@+id/scan"
        android:background="@drawable/gen"
        android:text="生成二维码"
        android:textColor="@color/sbc_header_text" />

    <Button
        android:id="@+id/scan"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:background="@drawable/scan"
        android:text="扫描查询"
        android:textColor="@color/sbc_header_text" />

    <Button
        android:id="@+id/insert"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/scan"
        android:layout_below="@+id/gen"
        android:background="@drawable/insert"
        android:text="插入操作数据"
        android:textColor="@color/sbc_header_text" />

</RelativeLayout>
