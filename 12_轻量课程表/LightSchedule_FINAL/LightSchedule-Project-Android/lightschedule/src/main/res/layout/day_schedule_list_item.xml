<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLl"
    android:layout_gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:layout_width="@dimen/list_head_left_item_length"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_marginTop="@dimen/margin_top_bottom"
        android:layout_marginBottom="@dimen/margin_top_bottom"
        android:id="@+id/llLessonTimeNum"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ä¸€"
            android:textColor="@color/colorText"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:id="@+id/tvLessonNum"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00\n9:45"
            android:id="@+id/tvLessonTime"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_top_bottom"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginBottom="@dimen/margin_top_bottom"
        android:orientation="vertical"
        android:id="@+id/llSingleLessonTime"
        android:gravity="center_vertical">

    </LinearLayout>

</LinearLayout>