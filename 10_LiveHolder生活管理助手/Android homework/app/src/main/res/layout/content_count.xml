<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="72dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tengyu.lifeholder.CountActivity"
    tools:showIn="@layout/activity_count">

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/tomato_drawable"
        android:layout_width="match_parent"
        android:layout_height="256dip"
        android:padding="12dip"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        card_view:cardBackgroundColor="@color/colorControlHolylight"
        card_view:cardCornerRadius="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        card_view:cardElevation="6dp">

        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/tomatotask_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:isHideTimeBackground="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:isShowMillisecond="true"
            app:timeTextColor="@color/themeLight"
            app:timeTextSize="48sp"
            app:isTimeTextBold="true"
            app:suffixGravity="bottom"
            app:suffixTextColor="@color/themeHolyLight"
            app:suffixTextSize="36sp"
            app:suffixMinute=":"
            app:suffixSecond=":" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
